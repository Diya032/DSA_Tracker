https://leetcode.com/problems/count-integers-with-even-digit-sum/solutions/1784810/c-easy-to-understand-using-formula-with-some-explanation/

class Solution {
public:
    int countEven(int num) {
        int temp = num, sum = 0;
        while (num > 0) {
            sum += num % 10;
            num /= 10;
        }
        return sum % 2 == 0 ? temp / 2 : (temp - 1) / 2;
    }
};
